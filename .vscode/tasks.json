{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run pylint on all files",
            "type": "shell",
            "command": "pylint --output-format=text $(dir /s /b *.py)",
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$pylint"
        }
    ]
}